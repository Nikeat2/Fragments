<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/first_page_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the App."   // текст учимся выносить в стринги (если что студия подсвечивает и делает это почти автоматически) 
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"   // зачем такое спецефическое отклонение?
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />  // зачем такое спецефическое отклонение?

    <Button
        android:id="@+id/ClickMe"   // плохой стил названия, обычно с большой буквы не начинают. Посмотри про CamelCase, SnakeCase и прочие стили текста. Обчыно выбирают или одно или другое, но тогда нужно это придерживаться 
        // в течение всего текста, например выше android:id="@+id/first_page_text" ты пишешь одним стилем, а тут другим.  В будущем будем использовать camelCase - clickMe, firstPageText и т.д соответственно везде приведи к стилю.
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"                             // текст в стринги
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"     // опять специф отклонение
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />   // опять специф отклонение

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/maxresdefault" />

</androidx.constraintlayout.widget.ConstraintLayout>
